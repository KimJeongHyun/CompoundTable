{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "declaration": true,
    "declarationDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "./dist",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src"],
  "exclude": [
    "./dist",
    "./node_modules",
    "./src/**/*.test.tsx",
    "./src/**/*.stories.tsx"
  ]
}
